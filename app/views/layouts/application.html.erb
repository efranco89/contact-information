<!DOCTYPE html>
<html>
  <head>
    <title>Contact Importer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
      <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="#">Contact Information</a>
      <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">
      <div class="navbar-nav">
        <div class="nav-item text-nowrap">
          <!-- <a class="" href="#">Sign out</a> -->
          <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link px-3' do %>
            <i class="fas fa-sign-out-alt"></i>&nbsp;Logout
          <% end %>
        </div>
      </div>
    </header>
    <div class="container-fluid">
      <div class="row">
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
          <div class="position-sticky pt-3">
            <ul class="nav flex-column">
              <li class="nav-item">
                <%= link_to root_path, class: 'nav-link' do %>
                  <i class="fas fa-id-card"></i>&nbsp;Contacts
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to contact_log_failures_path, class: 'nav-link' do %>
                  <i class="fas fa-bug"></i>&nbsp;Fail Imports
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to file_logs_path, class: 'nav-link' do %>
                  <i class="far fa-file"></i>&nbsp;Files
                <% end %>
              </li>
            </ul>
          </div>
        </nav>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <!-- logs_contact_infos_path, method: :delete -->
          <% if !notice.nil? %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <p class=""><%= notice %></p>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>
          <% if !alert.nil? %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <p class=""><%= alert %></p>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
