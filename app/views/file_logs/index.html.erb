<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Files</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
    </div>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Status</th>
        <th>User</th>
        <th>Errors</th>
        <th>Date</th>
      </tr>
    </thead>

    <tbody>
      <% @file_logs.each do |file_log| %>
        <tr class="<%= returns_row_status_color(status: file_log.status) %>">
          <td><%= file_log.status %></td>
          <td><%= file_log.user.email %></td>
          <td><%= file_log.message %></td>
          <td><%= file_log.file_name %></td>
          <td><%= file_log.created_at.strftime("%Y-%m-%d") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @file_logs, list_classes: %w(pagination justify-content-end) %>
</div>
